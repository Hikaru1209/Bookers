<h1>Books</h1>
<% @books.each do |book| %>
<p>Title</p>
<span><%= book.title %></span>

<p>Body</p>
<span><%= book.body %></span>

<p><%=link_to "Show", book_path(book.id) %>
	<%=link_to "Edit", edit_book_path(book.id) %>
	<%=link_to "Destroy", destroy_books_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
</p>

<% end %>

<h1>New book</h1>

<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>
<br>
<%= f.submit "Create Book" %>

<% end %>
